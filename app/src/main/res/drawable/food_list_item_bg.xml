<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <solid android:color="?attr/backgroundColor" />
        </shape>
    </item>

    <item
        android:top="-2dp"
        android:left="-2dp"
        android:right="-2dp"
        android:bottom="0dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:color="?attr/colorOnBackground"
                android:width="1dp" />
        </shape>
    </item>
</layer-list>
